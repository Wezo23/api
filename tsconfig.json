{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                     // Must be NodeNext
    "moduleResolution": "NodeNext",          // Required for ESM in Node
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}
